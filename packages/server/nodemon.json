{
  "ignore": [
    "test/**/*.ts",
    "test/**/*.spec.ts",
    ".git",
    "node_modules"
  ],
  "watch": [
    "src",
    ".env"
  ],
  "ext": "ts,js,json,yaml,yml",
  "env": {
    "NODE_ENV": "development",
    "PLATFORM": "on-premise"
  },
  "exec": "node -r tsconfig-paths/register -r dotenv/config -r ts-node/register"
}
